/* pages/openBox/index.wxss */
page {
  background: #fff;

}

.container {
  /* display: flex; */
  /* flex-direction: column; */
  align-items: center;
  width: 100%;
}

.success_tips{
  display: flex;
  align-items: center;
  justify-content: center;
}
.success_icon{
  width: 80rpx;
  height: 80rpx;
  margin-right: 26rpx;
}

.tips{
  font-size: 48rpx;
  color: #222;
  font-weight: bold;
}

.remark{
  font-size: 32rpx;
  color: rgba(0, 0, 0, .4);
  line-height: 54rpx;
  margin:48rpx 156rpx 38rpx 100rpx;
  text-align: center;
  font-weight: 400;
}

.box_image {
  width: 100%;
  height: 640rpx;
  margin: 0rpx 0 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box_image>image{
  width: 480rpx;
  height: 100%;
}
.box_title {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-bottom: 48rpx;
}

.title {
  font-size: 40rpx;
  color: #222;
  padding-bottom: 10rpx;
}

.num {
  color: #999;
  font-size: 24rpx;
}

.open_box {
  
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 78rpx;
  margin: 130rpx 40rpx 70rpx 40rpx ;
}

.btn_content {
  width: 320rpx;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  font-size: 32rpx;
  color: #1F1F52;
  background: #FFE50B;
  border-radius: 49rpx;
}

.blue{
  background: #5233FF;
  color: #fff;
}

.btn {
  width: 88rpx;
  height: 88rpx;
}

.btn_text {
  font-size: 28rpx;
  padding-top: 2rpx;
}

