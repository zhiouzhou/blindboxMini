/* pages/myOrder/index.wxss */
.myOrder {
  background: #fff;
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 32rpx;
}

.box {
  display: flex;
  /* align-items: center; */
  flex-direction: column;
  /* width: 70%; */
  flex: 1;
}

.box_cover {
  width: 128rpx;
  height: 128rpx;
  /* border-radius: ; */
  margin-right: 20rpx;
  flex-shrink: 0;
}

.box_title {
  display: flex;
  /* flex-direction: column; */
  align-items: stretch;
  justify-content: space-between;
}

.title {
  font-size: 28rpx;
  font-weight: bold;
  color: #222;
  padding-bottom: 14rpx;
  width: 60%;
}

.date {
  font-size: 24rpx;
  color: rgba(34, 34, 34, .4);
}

.price {
  flex: 1;
  display: flex;
  /* flex-direction: column; */
  align-items: center;
  justify-content: space-between;
}

.num {
  font-size: 28rpx;
  font-weight: bold;
  color: #222;
}

.state {
  /* color: #18C166; */
  font-size: 28rpx;
}

.state0,
.state2,
.state3,
.state4 {
  color: #A7A7A7;
}

.state1 {
  color: #18C166;
}

/*蒙层的结构，目的是覆盖整个手机界面*/
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框结构*/
.commodity_attr_box {
  width: 100%;
  /* height:200rpx; */
  padding: 0rpx 32rpx 108rpx;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  /* padding-top: 20rpx; */
  box-sizing: border-box;
  border-radius: 24rpx 24rpx 0 0;
  /* padding-bottom: 108rpx; */
}

.dialog_header {
  font-size: 40rpx;
  font-weight: bold;
  /* padding-bottom: 58rpx; */
  padding: 40rpx 0;
  text-align: center;
  border-bottom: 1px solid #F0F0F0;
  position: relative;
}

.close_icon{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 0;
  top: 40rpx;
}

.dialogOrder {
  margin: 0;
  padding: 32rpx 0;
}

.address {}

.address_tips {
  font-size: 36rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
}

.address_content {
  padding-bottom: 40rpx;
}

.address_user {
  display: flex;
  align-items: center;
  padding-bottom: 16rpx;
}

.user {
  font-size: 28rpx;
  color: #222;
}

.phone {
  color: #999;
  padding-left: 20rpx;
}

.addressDetail {
  width: 356rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
  font-size: 28rpx;
}

.message_content{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.message_text{
  font-size: 28rpx;

}
.message_state{
  font-size: 28rpx;
  color: #FF7900;
}