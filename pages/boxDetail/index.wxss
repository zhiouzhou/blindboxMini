/* pages/boxDetail/index.wxss */
page{
  background: #fff;
  padding-bottom: 176rpx;
}
.banner_image {
  width: 100%;
  height: 504rpx;
  border-radius: 24rpx;
  background: #ddd;
}

.box_content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 88rpx;
}

.title {}

.category {
  font-size: 24rpx;
  color: rgba(0, 0, 0, .6);
  padding-bottom: 8rpx;
}

.box_title{
  font-size: 40rpx;
  color: #222;
  font-weight: bold;
}

.share_icon{
  width: 100rpx;
  height: 100rpx;
}

.tips{
  font-size: 32rpx;
  color: #222;
  margin-left: 32rpx;
  margin-bottom: 38rpx;
  font-weight: bold;
}

.detail_image{
  background: #d6d6d6;
  width: 100%;

}
.footer{
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  padding: 24rpx 30rpx 64rpx;
  box-sizing: border-box;
}

.box_price{

}

.price{
  font-size: 32rpx;
  color: #FF2727;
  font-weight: bold;
}
.price::before{
  content: '￥';
  font-size: 20rpx;
  color:#FF2727;
  padding-right: 8rpx;
}
.integral{
  font-size: 32rpx;
  color: #FF2727;
  font-weight: bold;

}

.integral::before{
  content: '积分';
  font-size: 20rpx;
  color:#FF2727;
  padding-right: 8rpx;
  font-weight: bold;
}

.buy_btn{
  width: 314rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  border-radius: 12rpx;
  background: #5233FF;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}