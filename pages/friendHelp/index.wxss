/* pages/openBox/index.wxss */
page {
  background: #fff;

}

.container {
  /* display: flex; */
  /* flex-direction: column; */
  align-items: center;
  width: 100%;
}

.success_tips {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 62rpx 0 52rpx;
}

.tips {
  font-size: 40rpx;
  color: #222;
  font-weight: bold;
  line-height: 64rpx;
}


.box_image {
  width: 100%;
  height: 640rpx;
  margin: 0rpx 0 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.box_image>image {
  width: 480rpx;
  height: 100%;
}

.box_title {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-bottom: 48rpx;
}

.title {
  font-size: 40rpx;
  color: #222;
  padding-bottom: 10rpx;
}

.num {
  color: #999;
  font-size: 24rpx;
}

.help {
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  padding: 32rpx;
  border-radius: 16rpx;
  background: #F3F4F5;
  /* width: 100%; */
  margin: 86rpx 40rpx 60rpx 40rpx;
  margin-left: 40rpx;
  box-sizing: border-box;
}

.help_left {
  display: flex;
  align-items: center;
}

.left_icon {
  width: 60rpx;
  height: 60rpx;
  background: #999;
  border: 1px solid #fff;
  border-radius: 35rpx;
  margin-right: -20rpx;
}

.left_icon:nth-child(1) {
  margin-left: 0;
}

.ellipsis {
  width: 60rpx;
  height: 60rpx;
  font-size: 80rpx;
  border-radius: 35rpx;
  background: #fff;
  border: 1px solid transparent;
  text-align: center;
  padding: 0 14rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cirle {
  width: 8rpx;
  height: 8rpx;
  background: rgba(0, 0, 0, .15);
  border-radius: 4rpx;
  display: block;
}

.help_tips {
  color: #222;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.left_text {
  font-size: 32rpx;

}

.buy_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  background: #5233FF;
  /* margin: 70rpx; */
  /* width: 100%; */
  margin: 0 40rpx 60rpx 40rpx;
  box-sizing: border-box;
}

/* 自定义居中弹框------------------- */



.zan-dialog--show .zan-dialog__container {}

.zan-dialog--show .zan-dialog__mask {
  display: block;
}

.view-mask {
  z-index: 2;
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5)
}

.zan-dialog__container2 {
  position: fixed;
  width: 506rpx;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  z-index: 40;
  border-radius: 24rpx;
  background: #fff;
  padding: 30rpx 32rpx 60rpx;
}

.body_left{
  display: flex;
  align-items: center;
}

.body_box_image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 26rpx;
  border-radius: 16rpx;
}
.title_content{
  padding: 16rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.category{
  font-size: 24rpx;
  color: rgba(0, 0, 0, .4);
}

.body_box_title{
  font-size: 32rpx;
  font-weight: bold;
}

.tips_content{
  height: 196rpx;
  background: #999;
  border-radius: 24rpx;
  margin: 24rpx 0;
}

.surplus_num{
  font-size: 24rpx;
  color: rgba(139, 78, 78, 0.5);
  text-align: center;
  margin-bottom: 24rpx;
}
.know_btn{
  height: 98rpx;
  line-height: 98rpx;
  border-radius: 49rpx;
  background: #5233FF;
  color: #fff;
  font-size: 32rpx;
  text-align:center;
}