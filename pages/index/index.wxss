.top{
  width: 100%;
  background-color: #5233FF;
  padding: 40rpx 40rpx 174rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 0 0 64rpx 0;
  box-sizing: border-box;
}
.home_title{
  font-size: 80rpx;
  color: #fff;
  font-weight: bold;
  padding-bottom: 20rpx;
}
.sub_title{
  font-size: 28rpx;
  color: #7350FF;
  background: #fff;
  padding: 8rpx 18rpx;
  border-radius: 27rpx;
  box-sizing: border-box;
}

.hot{
  margin: -110rpx 32rpx 48rpx 32rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
}

.hot_top{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.hot_title{
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}
.more{
  display: flex;
  align-items: center;
}
.more_text{
  font-size: 24rpx;
  color: rgba(31, 31, 82, .4);
  padding-right: 14rpx;
}

.more_icon{
  width: 14rpx;
  height: 24rpx;
}

.recommend{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.commodity{
  width: 33%;
}
.comm_cover{
  width: 200rpx;
  height: 200rpx;
  background: #d0d0d0;
  border-radius: 16rpx;
  padding-bottom: 16rpx;
}
.comm_title{
  font-size: 26rpx;
  color: #1F1F52;
  padding-bottom: 6rpx;
  font-weight: bold;
}

.price{
  display: flex;
  align-items: center;  
}
.pre_price{
  font-size: 32rpx;
  color: #FF2727;
}
.pre_price::before{
  content:'ï¿¥';
  font-size:24rpx;
}
.old_price{
  font-size: 24rpx;
  color: rgba(31, 31, 82, .4);
  padding-top: 4rpx;
}

.all{
  margin: 48rpx 32rpx;
}
.all_title{

}
.all_list{
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.commodity_all{
  margin-top: 16rpx;
  margin-bottom: 18rpx;
  background: #fff;
  border-radius: 24rpx;
}

.all_bottom{
  padding:0 14rpx 16rpx;
}
.all_image{
  width: 216rpx;
  height: 216rpx;
}

