<view class="container_page">
  <nav-bar navbar-data='{{nvabarData}}'></nav-bar>
  <view class="container" style="padding-top:{{height}}px">
    <view class="top">
      <view class="left" bindtap="gotoDrawBox">
        <view class="home_title">BOB</view>
        <view class="sub_title">BOB色彩系列</view>
      </view>
      <view class="right"></view>
    </view>
    <view class="hot">
      <view class="hot_top">
        <text class="hot_title">热门推荐</text>
        <view class="more">
          <text class="more_text">查看更多</text>
          <image class="more_icon" src="/images/icon_more2@2x.png" mode="aspectFit"></image>
        </view>
      </view>
      <view class="recommend">
        <view class="commodity" wx:for="{{3}}" wx:key="index" bindtap="gotoDetail">
          <image class="comm_cover" src=""></image>
          <view class="comm_title">卓大王系列</view>
          <view class="price">
            <text class="pre_price">49</text>
            <text class="old_price">￥69</text>
          </view>
        </view>
      </view>

    </view>
    <view class="all">
      <text class="hot_title">全部</text>
      <view class="all_list">
        <view class="commodity_all" wx:for="{{12}}" wx:key="index">
          <image class="comm_cover all_image" src=""></image>
          <view class="all_bottom">
            <view class="comm_title">卓大王系列</view>
            <view class="price">
              <text class="pre_price">49</text>
              <text class="old_price">￥69</text>
            </view>
          </view>

        </view>
      </view>
    </view>
  </view>
</view>