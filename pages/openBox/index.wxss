/* pages/openBox/index.wxss */
page {
  background: #fff;

}

.container {
  /* display: flex; */
  /* flex-direction: column; */
  align-items: center;
  width: 100%;
}

.box_image {
  width: 100%;
  height: 640rpx;
  margin: 66rpx 0 40rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box_image>image{
  width: 480rpx;
  height: 100%;
}
.box_title {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-bottom: 48rpx;
}

.title {
  font-size: 40rpx;
  color: #222;
  padding-bottom: 10rpx;
}

.num {
  color: #999;
  font-size: 24rpx;
}

.open_box {
  
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 78rpx;
  margin: 0 116rpx 78rpx 116rpx ;
}

.btn_content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn {
  width: 88rpx;
  height: 88rpx;
}

.btn_text {
  font-size: 28rpx;
  padding-top: 2rpx;
}

.help {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-radius: 16rpx;
  background: #F3F4F5;
  /* width: 100%; */
  margin: 0 40rpx 60rpx 40rpx;
  margin-left: 40rpx;
  box-sizing: border-box;
}

.help_left {
  display: flex;
  align-items: center;
}

.left_icon {
  width: 52rpx;
  height: 52rpx;
  margin-right: 20rpx;
}

.left_text {
  font-size: 32rpx;

}

.more_icon {
  width: 12rpx;
  height: 20rpx;
}

.buy_btn {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  padding: 32rpx;
  border-radius: 16rpx;
  background: #5233FF;
  /* margin: 70rpx; */
  /* width: 100%; */
  margin: 0 40rpx 60rpx 40rpx;
  box-sizing: border-box;
}

/*蒙层的结构，目的是覆盖整个手机界面*/
.commodity_screen {     
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框结构*/
.commodity_attr_box {
  width: 100%;
  /* height:200rpx; */
  padding: 40rpx 40rpx 68rpx ;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
  box-sizing: border-box;
  border-radius: 24rpx 24rpx 0 0;
}

.dialog_header{
  font-size: 40rpx;
  font-weight: bold;
  padding-bottom: 58rpx;
  text-align: center;
}

.dialog_body{
  display: flex;
  align-items: center;
  justify-content: space-between;

}

.body_left{
  display: flex;
  align-items: center;
}

.body_box_image{
  width: 120rpx;
  height: 120rpx;
  margin-right: 26rpx;
  border-radius: 8rpx;
}
.title_content{
  padding: 16rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.category{
  font-size: 24rpx;
  color: rgba(0, 0, 0, .4);
}

.body_box_title{
  font-size: 32rpx;
  font-weight: bold;
}
.body_right{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.price{
  font-size: 32rpx;
  font-weight: bold;
}

.total{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 32rpx 0 120rpx;
}

.total_title{
  font-size: 32rpx;
  font-weight: bold;
}

.total_price{
  font-size: 48rpx;
  color: #FF2727;
  font-weight: bold;
}
.total_price::before{
  content: '￥';
  font-size: 32rpx;
  padding-right: 10rpx;
}

.pay_btn{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  background: #5233FF;
  border-radius: 49rpx;
  text-align: center;
}